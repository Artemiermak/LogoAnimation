<% include ./partials/header.ejs %>

<h1 id="contactHeader" class="padding15 textCenter" >Contact Artem</h1>
<p class="padding15 textCenter">Please, fill this form if you want to send me message. I will answer you as soon as I can. Thank you!</p>

<div class="col-lg-3"></div>

<form id="contactForm " class="col-lg-6 col-md-6 col-sm-6 col-xs-12 padding15" method="POST" role="form">
    <div class="form-group">
        <label for="userName">Your name</label>
        <input type="text" class="form-control" id="userName" name="userName" placeholder="type your name here" autocomplete="on" autofocus required>
    </div>

    <div class="form-group">
        <label for="from">Email address</label>
        <input type="email" class="form-control" id="from" name="from" placeholder="type your email here" autocomplete="on" required>
    </div>

    <div class="form-group">
        <label for="subject">Subject</label>
        <input type="text" class="form-control" id="subject" name="subject" placeholder="type email subject" autocomplete="off" required>
    </div>

    <div class="form-group">
        <label for="message">Message</label>
        <textarea name="message" class="form-control" rows="3" required></textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success" onclick="myFunction()">Send</button>
        <button type="reset" class="btn btn-warning" >Reset</button>
    </div>


</form>


